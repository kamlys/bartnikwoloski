<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="top">
        <div id="logo">
            <img src="~/Images/Logo1.png" style="width: 500px" />
        </div>
        <img src="~/Images/Up.jpg" />
    </div>
    <div id="menu">
        <ol>
            <li><a href="#">Start</a></li>
            <li><a href="#">O nas</a></li>
            <li><a href="#">Nasze produkty</a></li>
            <li><a href="#">Nasze specjały</a></li>
            <li><a href="#">Uroda z pasieki</a></li>
            <li><a href="#">Ciekawostki</a></li>
        </ol>
    </div>
    <div id="midContent">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        Gospodarstwo Pasieczne „Bartnik Wołoski”<br />

        Mistrz Pszczelarz  mgr inż. Paweł Jureczka<br />

        Sopotnia Wielka 206<br />
        34-340 Jeleśnia<br />

        tel. kom. 601 238 356 e-mail: bartnikwoloski@wp.pl

        @if(Request.IsAuthenticated)
        {
            @Html.ActionLink("Wyloguj", "LogOff", "Users")
        }
        else
        { 
            @Html.ActionLink("Zaloguj", "Login", "Users")
        }

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
